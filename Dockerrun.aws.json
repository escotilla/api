{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "php",
      "host": {
        "sourcePath": "/var/app/current"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/images/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "mongo",
      "image": "mongo",
      "essential": true,
      "memory": 128,
      "environment": [
        {
          "name": "MONGO_DATA_DIR",
          "value": "/data/db"
        }
      ]
    },
    {
      "name": "php",
      "image": "northbank/php-api",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "php",
          "containerPath": "/var/www/html",
          "readOnly": true
        }
      ],
      "links": [
        "mongo"
      ],
      "environment": [
        {
          "name": "MONGO_DATA_DIR",
          "value": "/data/db"
        },
        {
          "name": "DB_CONNECTION",
          "value": "mongodb"
        },
        {
          "name": "DB_HOST",
          "value": "mongo"
        },
        {
          "name": "DB_PORT",
          "value": "27017"
        },
        {
          "name": "DB_DATABASE",
          "value": "Escotilla"
        },
        {
          "name": "DB_USERNAME",
          "value": "escotilla"
        },
        {
          "name": "DB_PASSWORD",
          "value": "turkey1234567890"
        },
        {
          "name": "CACHE_DRIVER",
          "value": "file"
        },
        {
          "name": "QUEUE_DRIVER",
          "value": "sync"
        },
        {
          "name": "APP_KEY",
          "value": "q7RfesndPolFjC8ZzV53KZXjYfYVFb3E"
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "php",
        "mongo"
      ],
      "mountPoints": [
        {
          "sourceVolume": "php",
          "containerPath": "/var/www/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}